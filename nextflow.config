/*
 * nextflow.config for plasmid-methylation-qc
 *
 * Defines:
 *  - default params
 *  - resource hints per process
 *  - execution profiles (local by default)
 */

params {
  //
  // Core pipeline inputs
  //
  samplesheet = 'samplesheet.csv'
  outdir      = 'results'

  //
  // Pileup settings
  //
  mod_prob    = 0.8        // probability threshold for calling a site modified
  mod_code    = 'm'        // mod_code to treat as the primary modification

  //
  // Combine step
  //
  combine_run = true       // run the per-treatment combine step by default
}

timeline {
  enabled = true
  file    = 'timeline.html'
}

trace {
  enabled = true
  file    = 'trace.txt'
}

report {
  enabled = true
  file    = 'report.html'
}

dag {
  enabled = true
  file    = 'flowchart.png'
}

process {
  // generic defaults
  errorStrategy = 'retry'
  maxRetries    = 1
  cpus          = 2
  memory        = '4 GB'
  time          = '2h'

  withName: EXTRACT_FULL {
    cpus   = 2
    memory = '4 GB'
    time   = '2h'
  }

  withName: TSV_TO_PARQUET {
    cpus   = 2
    memory = '4 GB'
    time   = '2h'
  }

  withName: EXTRACT_COLLAPSED {
    cpus   = 2
    memory = '4 GB'
    time   = '2h'
  }

  withName: PILEUP_R {
    cpus   = 2
    memory = '4 GB'
    time   = '2h'
  }

  withName: COMBINE_RUN {
    cpus   = 1
    memory = '4 GB'
    time   = '2h'
  }
}

profiles {

  // Default profile (used when you don't pass -profile)
  standard {
    process.executor = 'local'
    workDir          = 'work'
  }

  // Explicit local profile
  local {
    process.executor = 'local'
    workDir          = 'work'
  }

  // Skeleton for an HPC/SLURM profile (example only)
  // slurm {
  //   process.executor = 'slurm'
  //   workDir          = '/path/to/scratch/work'
  //
  //   process {
  //     queue  = 'short'
  //     cpus   = 4
  //     memory = '8 GB'
  //   }
  // }
}

